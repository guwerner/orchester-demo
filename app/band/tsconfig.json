{
   "$schema": "https://www.schemastore.org/tsconfig",
  "_version": "22.0.0",

    "compilerOptions": {
        "target": "es2022",
        "module": "nodenext",
        "lib": ["es2024", "ESNext.Array", "ESNext.Collection", "ESNext.Iterator"],
        "skipLibCheck": true,
        "allowJs": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "moduleResolution": "nodenext",
        "rootDir": "./webapp",
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "band/*": [
                "./webapp/*"
            ]
        },
        "typeRoots": [
          "./node_modules/@types",
          "./node_modules/@sapui5/types",
          "../../node_modules/@types",
          "../../node_modules/@sapui5/types",
          ]
    },
    "include": [
        "./webapp/**/*"
    ]
}